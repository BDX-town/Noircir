{
  "include": ["src/index.ts"],
  "compilerOptions": {
    "lib": ["ES2019", "dom"],
    "emitDeclarationOnly": true,
    "declaration": true,
    // Ensure that Babel can safely transpile files in the TypeScript project
    "isolatedModules": true,
    "jsx": "react",
    "esModuleInterop": true,
    "outDir": "dist/types",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strictNullChecks": false
  }
}
